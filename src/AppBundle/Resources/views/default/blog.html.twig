
{% extends 'AppBundle::layout.html.twig' %}
{% block body %}

    {{ parent() }}

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>I AM CLEMENT RIBOURT RESPONSIVE CV</title>


        <![endif]-->

        <link rel="shortcut icon" href="{{ asset('assets/images/ico/favicon.png') }}">
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('assets/images/ico/apple-touch-icon-144-precomposed.png') }}"/>
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('assets/images/ico/apple-touch-icon-114-precomposed.png') }}"/>
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('assets/images/ico/apple-touch-icon-72-precomposed.png') }}"/>
        <link rel="apple-touch-icon-precomposed" href="{{ asset('assets/images/ico/apple-touch-icon-57-precomposed.png') }}"/>

    </head>
    <body>
    <!-- Preloader -->
    <div id="tt-preloader">
        <div id="pre-status">
            <div class="preload-placeholder"></div>
        </div>
    </div>



    <!-- Blog Section -->
    <section id="blog" class="latest-blog-section section-padding">
        <div class="container">
            <a href="{{ path('homepage') }}">Revenir au CV</a>
            <h2 class="section-title wow fadeInUp">Blog</h2>

            <div class="row">
                {% for BlogPost in AllBlog %}
                <div class="col-sm-4">
                    <article class="blog-post-wrapper">
                        <div class="figure">
                            <div class="post-thumbnail">
                                <a href="{{ path('show_blog', {'id': BlogPost.id}) }}"><img src="{{ asset('assets/images/blog/01.jpg') }}" class="img-responsive " alt=""></a>
                            </div>
                            <i class="fa fa-file-photo-o"></i>
                        </div><!-- /.figure -->
                        <header class="entry-header">
                            <div class="post-meta">
                  <span class="the-category">
                    <p>{{ BlogPost.category.name }}</p>
                  </span>
                            </div>
                            <h2 class="entry-title"><a href="#" rel="">{{ BlogPost.title }}</a></h2>
                            <hr>
                            <div class="entry-meta">
                                <ul class="list-inline">
                                    <li>
                      <span class="the-author">
                        <p>{{ BlogPost.auteur }}</p>
                      </span>
                                    </li>
                                    <li>
                      <span class="the-time">
                        <p>{{ BlogPost.date|date('Y-m-d') }}</p>
                      </span>
                                    </li>

                                </ul>
                            </div><!-- .entry-meta -->
                        </header><!-- .entry-header -->
                    </article>
                </div><!-- /.col-sm-4 -->
                {% endfor %}
            </div><!--.row-->
        </div><!-- /.container -->
    </section><!-- End Blog Section -->



    <!-- Scroll-up -->
    <div class="scroll-up">
        <a href="#home"><i class="fa fa-angle-up"></i></a>
    </div>


    </body>


{% endblock %}

